<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".UserListActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="40dp"
        android:id="@+id/app_name"
        android:textAlignment="center"
        android:textStyle="bold"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/Tips_for_safety"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:onClick="Tips For Women Safety"
        android:text="Tips For Women Safety"
        android:textColor="@color/colortext1"
        android:textStyle="bold"

        app:backgroundTint="@color/colorTextHint"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/escapefromthreat"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textStyle="bold"
        android:text="Tips to escape from threats"

        android:background="@color/colorText"/>

    <Button
        android:id="@+id/pictures"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/colortext1"
        android:clickable="true"
        android:text="Pictures for self defence"
        android:textStyle="bold"
        app:backgroundTint="@color/colorTextHint" />


    <Button
        android:id="@+id/sendSMS"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textStyle="bold"
        android:text="Emergency alert"

        android:background="@color/colorText"/>

</RelativeLayout>